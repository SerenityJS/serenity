    "@serenityjs/typescript-config": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@serenityjs/serenity": "workspace:*"
  }
